<% @pressets.each_with_index do |preset,i| %>
  <div class="preset">
    <h2 class="small">
      <%= i+1 %>. <%= preset.name %>
    </h2>

    <div class="preset-pressure">
      <%= link_to inflator_path(pressure: preset.front_pressure), class: "preset-element" do %>
        <p class="small">Front Pressure</p>
        <h3><%= preset.front_pressure %></h3>
        <p class="small">psi</p>
      <% end %>

      <%= link_to inflator_path(pressure: preset.rear_pressure), class: "preset-element" do %>
        <p class="small">Rear Pressure</p>
        <h3><%= preset.rear_pressure %></h3>
        <p class="small">psi</p>
      <% end %>
    </div>
    <p>
      <%= link_to "Edit", edit_presset_path(preset), class: "small" %>
       | <%= link_to "Delete", preset, method: :delete, data: {confirm: "Are you sure you want to delete this preset?"} %>
    </p>
  </div>
<% end %>
